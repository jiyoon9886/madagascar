{
  "name": "madagascar",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "proxy": "http://localhost:3001",
  "jest": {
    "testURL": "http://localhost:3001",
    "modulePathIgnorePatterns": [
      "client"
    ]
  },
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/userSeed.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build",
    "lint": "eslint",
    "fix": "eslint --fix .",
    "test": "jest --verbose && npm run lint",
    "test-dev": "concurrently \"nodemon server.js\" \"jest --watchAll\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kishaprudente/madagascar.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kishaprudente/madagascar/issues"
  },
  "homepage": "https://github.com/kishaprudente/madagascar#readme",
  "devDependencies": {
    "concurrently": "^5.2.0",
    "create-react-app": "^3.4.1",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^5.1.3",
    "eslint-plugin-import": "^2.21.1",
    "eslint-plugin-prettier": "^2.6.2",
    "nodemon": "^2.0.4",
    "prettier": "^1.13.7"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "babel-jest": "^24.9.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "connect-mongo": "^3.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "if-env": "^1.0.4",
    "is-empty": "^1.2.0",
    "jest": "^24.9.0",
    "mongoose": "^5.9.18",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0"
  }
}
