{
  "name": "madagascar",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "jest": {
    "testURL": "http://localhost:3001",
    "modulePathIgnorePatterns": [
      "client"
    ]
  },
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build",
    "lint": "eslint --quiet",
    "fix": "eslint --fix .",
    "test": "jest --watchAll=false && npm run lint",
    "test-dev": "concurrently \"nodemon server.js\" \"jest --watchAll\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kishaprudente/madagascar.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kishaprudente/madagascar/issues"
  },
  "homepage": "https://github.com/kishaprudente/madagascar#readme",
  "devDependencies": {
    "concurrently": "^5.2.0",
    "create-react-app": "^3.4.1",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.2",
    "nodemon": "^2.0.4",
    "prettier": "^1.13.7"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "babel-jest": "^24.9.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "jest": "^24.9.0",
    "mongoose": "^5.9.18"
  }
}
